<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/browse.css') }}">
    <title>Browse</title>
    {% include 'shared/navBar.jinja' %}

    <style>
        .item-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.4s ease;
            margin-bottom: 2rem;
            margin-left: 10px;
            border: 3px solid transparent;
            text-align: center;
        }
    </style>

</head>
<body>
    <div>
        <div class="hero-section text-center mb-4">
            <h1>Browse Page</h1>
            <h2>Welcome to the Browse Page</h2>
            <p>Explore our collection of items.</p>
        </div>
        <form action="/search" method="GET">
            <div class="row mb-1 justify-content-center">
                <div class="col-lg-4 mb-3">
                    <div class="search-container">
                        <i class="search-icon"></i>
                        <div class="input-group">
                            <input type="text" id="searchBar" class="form-control search-input" placeholder="Search for items...">
                            {# <button class="btn btn-primary search-button" id="searchButton">Search</button> #}
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="item-grid me-3 row g-3 pt-3">
            {% for item in items %}
                <div class="col-md-4">
                    <div class="item-card p-3">
                        <img src="{{ item.img }}" alt="{{ item.title }}" class="img-fluid mb-3"
                            style="border-radius: 15px; max-height: 200px; object-fit: cover;">
                        <h5 class="item-title">{{ item.title }}</h5>
                        <p class="item-type">{{ item.type }}</p>
                        <p class="fw-bold">${{ "%.2f"|format(item.price) }}</p>
                        <a href="{{ item.link }}" target="_blank" class="btn btn-primary">View Details</a>
                        <a href="#" class="btn btn-secondary"><i class="fa-solid fa-cart-shopping"></i> Add to Cart</a>
                    </div>
                </div>
            {% endfor %}
            {% if total_pages > 1 and start_page > 0 %}
                <div class="d-flex justify-content-center mt-4">
                    <nav>
                        <ul class="pagination">

                            <!-- Prev button -->
                            {% if page > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ url_for('browse', page=page-1) }}">Previous</a>
                            </li>
                            {% endif %}

                            <!-- Page numbers (sliding window) -->
                            {% for p in range(start_page, end_page + 1) %}
                            <li class="page-item {% if p == page %}active{% endif %}">
                                <a class="page-link" href="{{ url_for('browse', page=p) }}">{{ p }}</a>
                            </li>
                            {% endfor %}

                            <!-- Next button -->
                            {% if page < total_pages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ url_for('browse', page=page+1) }}">Next</a>
                            </li>
                            {% endif %}

                        </ul>
                    </nav>
                </div>
            {% endif %}

        </div>
    </div>
</body>
<script>
    document.getElementById("searchBar").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let items = document.querySelectorAll(".item-card");

        items.forEach(card => {
            let title = card.querySelector("h5").textContent.toLowerCase();
            let desc = card.querySelector("p").textContent.toLowerCase();

            if (title.includes(filter) || desc.includes(filter)) {
            card.parentElement.style.display = ""; // show
            } else {
            card.parentElement.style.display = "none"; // hide
            }
        });
    });
</script>
</html>